{
  "name": "nextjs-boilerplate",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "dev-node": "node server.js",
    "start-node": "NODE_ENV=production node server.js",
    "lint": "next lint --no-error-on-unmatched-pattern",
    "inspect": "NODE_OPTIONS='--inspect' next dev",
    "analyze": "ANALYZE=true yarn build",
    "i18n": "node ./plugins/i18n.js ",
    "format": "prettier --no-error-on-unmatched-pattern --write ./**/*.{ts,tsx,scss,css,json}",
    "tsc": "tsc",
    "ci": "yarn lint && yarn format && yarn tsc",
    "api": "swagger-typescript-api --no-client --modular --responses --extract-request-params   -p https://{{api}}.azurewebsites.net/swagger/v1/swagger.json -o ./src/types/api"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.6.0",
    "axios": "^0.21.1",
    "cookie": "^0.4.1",
    "next": "latest",
    "next-intl": "^1.4.1",
    "nprogress": "^0.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-redux": "^7.2.4",
    "sass": "^1.35.1",
    "swr": "^0.5.6",
    "universal-cookie": "^4.0.4"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^11.0.1",
    "@svgr/webpack": "^5.5.0",
    "@types/axios": "^0.14.0",
    "@types/classnames": "^2.3.1",
    "@types/nprogress": "^0.2.0",
    "@types/react": "17.0.11",
    "@types/react-redux": "^7.1.16",
    "autoprefixer": "^10.2.6",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "del": "^6.0.0",
    "eslint": "7.29.0",
    "eslint-config-next": "11.0.1",
    "file-loader": "^6.2.0",
    "next-compose-plugins": "^2.2.1",
    "postcss": "^8.3.5",
    "prettier": "^2.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.19.0",
    "swagger-typescript-api": "^9.1.2",
    "tailwindcss": "^2.2.4",
    "typescript": "4.3.4"
  }
}
